# Free API Hub Environment Configuration

# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=free_api_hub
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Cache (Dragonfly/Redis)
DRAGONFLY_URL=redis://localhost:6379
REDIS_PASSWORD=dragonfly

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Integration (MCP)
GITHUB_TOKEN=ghp_your_token_here
DEFAULT_REPO=Gzeu/free-api-hub
DEFAULT_BRANCH=main

# Notion Integration
NOTION_API_KEY=secret_your_notion_key_here
NOTION_DATABASE_ID=your_database_id_here

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-token-here
SLACK_DEFAULT_CHANNEL=#api-hub-alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# Monitoring
GRAFANA_PASSWORD=admin

# Deployment (Fly.io)
FLY_API_TOKEN=fo1_your_fly_token_here
